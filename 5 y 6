parte 5

class Notas {
    public static void main(String[] args) {

        // Declarar el arreglo de 4 números enteros
        int[] notas = {3, 4, 5, 2};

        // Mostrar la primera y la última nota
        System.out.println("Primera nota: " + notas[0]);
        System.out.println("Última nota: " + notas[notas.length - 1]);
    }
}





class Nombres {
    public static void main(String[] args) {

        // Declarar el array de 3 nombres
        String[] nombres = {"Ana", "Carlos", "María"};

        // Imprimir el segundo nombre
        System.out.println("Segundo nombre: " + nombres[1]);
    }
}



class Main {
    public static void main(String[] args) {

        // 1. Declaración del array llamado 'datos' con 5 posiciones
        int[] datos = new int[5];

        // 2. Asignar un valor a la posición 3 del array
        // Recuerda: las posiciones empiezan en 0
        datos[3] = 25;

        // 3. Mostrar en pantalla el contenido de la posición 3
        System.out.println("El valor almacenado en la posición 3 es: " + datos[3]);
    }
}






parte 6 



class MostrarArray {
  static void main(String[] args) {

        // 1. Declarar un array de 5 números enteros
        int[] numeros = {10, 20, 30, 40, 50};

        // 2. Usar un ciclo for para mostrar todos los elementos del array
        for (int i = 0; i < numeros.length; i++) {
            System.out.println("Elemento en la posición " + i + ": " + numeros[i]);
        }
    }
}






class Nombres {
     static void main(String[] args) {

        // 1. Declarar un array de 4 nombres
        String[] nombres = {"juan carlos", "Matias", "María", "esteban"};

        // 2. Usar un ciclo for para mostrar cada nombre en una línea distinta
        for (int i = 0; i < nombres.length; i++) {
            System.out.println(nombres[i]);
        }
    }
}




class Sumar {
    static void main(String[] args) {

        // 1. Declarar un array de 3 números enteros
        int[] numeros = {5, 10, 15};

        // 2. Variable para almacenar la suma
        int suma = 0;

        // 3. Usar un ciclo for para sumar los elementos del array
        for (int i = 0; i < numeros.length; i++) {
            suma = suma + numeros[i];
        }

        // 4. Mostrar el resultado final
        System.out.println("La suma de los elementos es: " + suma);
    }
}


